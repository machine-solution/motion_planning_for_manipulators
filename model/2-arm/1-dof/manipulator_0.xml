<mujoco>
	<asset>
		<material name="red"   rgba="1 0 0 1"/>
		<material name="green" rgba="0 1 0 1"/>
		<material name="blue"  rgba="0 0 1 1"/>
		<material name="white" rgba="1 1 1 1"/>
		<material name="gray"  rgba=".5 .5 .5 1"/>
	</asset>

    <worldbody>
        <light diffuse=".5 .5 .5" pos="0 0 10" dir="0 0 -1"/>
        <geom type="plane" size="2 2 0.1" rgba="1 1 1 1"/>

        <body name="link 0-0" pos="-0.75 0 0.1" euler="0 90 0">
            <joint name="joint 0-0" type="hinge" axis="-1 0 0" pos="-1 0 -0.25"/>
            <geom name="geom link 0-0" type="cylinder" size="0.05 0.25" material="red"/>
        </body>

        <body name="link 1-0" pos="1.25 0 0.1" euler="0 90 0">
            <joint name="joint 1-0" type="hinge" axis="-1 0 0" pos="1 0 -0.25"/>
            <geom name="geom link 1-0" type="cylinder" size="0.05 0.25" material="red"/>
        </body>


        <body name="link 0-0 shade" pos="-0.75 0 0.1" euler="0 90 0">
            <joint name="joint 0-0 shade" type="hinge" axis="-1 0 0" pos="-1 0 -0.25"/>
            <geom name="geom link 0-0 shade" type="cylinder" size="0.05 0.25" material="green"/>
        </body>

        <body name="link 1-0 shade" pos="1.25 0 0.1" euler="0 90 0">
            <joint name="joint 1-0 shade" type="hinge" axis="-1 0 0" pos="1 0 -0.25"/>
            <geom name="geom link 1-0 shade" type="cylinder" size="0.05 0.25" material="green"/>
        </body>


    </worldbody>

    <contact>
        <exclude body1="link 0-0 shade" body2="link 0-0"/>
        <exclude body1="link 0-0 shade" body2="link 1-0"/>
        <exclude body1="link 1-0 shade" body2="link 0-0"/>
        <exclude body1="link 1-0 shade" body2="link 1-0"/>
    </contact>
</mujoco>
